<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="12sp"
        android:text="Client Name"
        android:gravity="start|center"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tvIp"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:text="ip address"
        android:gravity="start|center"
        android:layout_below="@+id/tvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText,SmallSp"/>

    <TextView
        android:id="@+id/tvWiFi"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:text=""
        android:gravity="end|center"
        android:layout_toStartOf="@+id/tvMobile"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvMobile"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tvMobile"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp"
        android:text=""
        android:gravity="end|center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tvWiFiCounter"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:text=""
        android:gravity="end|center"
        android:layout_toStartOf="@+id/tvMobile"
        android:layout_alignTop="@+id/tvIp"
        android:layout_toLeftOf="@+id/tvMobile"
        tools:ignore="HardcodedText,SmallSp"/>

    <TextView
        android:id="@+id/tvMobileCounter"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:text=""
        android:gravity="end|center"
        android:layout_below="@+id/tvWiFi"
        android:layout_toRightOf="@+id/tvWiFi"
        android:layout_toEndOf="@+id/tvWiFi"
        tools:ignore="HardcodedText,SmallSp"/>


</RelativeLayout>